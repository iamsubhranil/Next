fn combinations(l) {
    res = []
    size = l.size()
    j = -1
    for(i in range(size - 1)) {
        for(k in range(i + 1, size)) {
            res[++j] = [l[i], l[k]]
        }
    }
    ret res
}

PI = 3.14159265358979323
